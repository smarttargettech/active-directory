#!/bin/bash
set -e -u

IMAGE='gitregistry.knut.univention.de/univention/infrastructure/ucs-ec2-tools'
BOTO="$HOME/.boto"

[ -s "$BOTO" ]

declare -a cmd=(
	--rm
	-it
	-v "$(pwd):/test"
	-v ~/ec2:/root/ec2:ro
	--network host
	--dns '192.168.0.124'
	--dns '192.168.0.97'
	--dns-search 'knut.univention.de'
	-e USER="$USER"
)
# shellcheck disable=SC2016
for cred in $(exec sed -rne '/^\[Credentials\]/,${/^\[Credentials\]/d;s/^ *(aws_(secret_)?access_key(_id)?) *= *(.*)/\U\1\E=\4/p;/^\[/q}' "$BOTO")
do
	cmd+=(-e "$cred")
done
cmd+=(
	"$IMAGE"
	"${0##*/}"
	"$@"
)
[ -n "${DEBUG:-}" ] && echo "starting ucs-ec2-list with ${cmd[*]}"
exec docker run "${cmd[@]}"
