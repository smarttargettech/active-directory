digit($n)
	// Returns a string containing the hex equivalent of a number in the range 0-15.
	return "" + $n if $n < 10
	return "a" if $n == 10
	return "b" if $n == 11
	return "c" if $n == 12
	return "d" if $n == 13
	return "e" if $n == 14
	return "f" if $n == 15

hex($n)
	// Returns the "expanded" version of a one- or two-digit hex value.
	$h = floor($n / 16) % 16
	$l = $n % 16
	return digit($h) + digit($l)

