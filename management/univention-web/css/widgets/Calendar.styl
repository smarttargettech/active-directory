/* Calendar
 *
 * Styling Calendar mainly includes:
 *
 * 1. Calendar container
 * 		.dijitCalendar - main container
 * 		.dijitCalendarHover / .dijitCalendarActive - states e.g. hover,active
 *
 * 2. Month
 * 		.dijitCalendarMonthContainer
 * 		.dijitCalendarMonthLabel
 *      .dijitCalendarDecrease / .dijitCalendarDecrease - icons for switching to previous/next month
 *      .dijitCalendarArrowActive .dijitCalendarDecrease - states e.g. hover,active
 *
 * 3. Date
 * 		.dijitCalendarDayLabelTemplate - week day column header e.g. S M T W T F S
 * 		.dijitCalendarDateTemplate - date label wrapper
 * 		.dijitCalendarPreviousMonth .dijitCalendarDateLabel - special labels for previous or next month
 *      .dijitCalendarSelectedDate .dijitCalendarDateLabel - styles for selected date
 * 		.dijitCalendarDisabledDate .dijitCalendarDateLabel - styles for disabled date
 * 		.dijitCalendarActiveDate .dijitCalendarDateLabel - states e.g. hover,active
 *
 * 4. Year
 * 		.dijitCalendarYearContainer
 * 		.dijitCalendarYearLabel
 * 		.dijitCalendarPreviousYear /.dijitCalendarNextYear
 *      .dijitCalendarNextYearHover / .dijitCalendarPreviousYearHover - states e.g. hover,active
 *
 * 5. Dropdown Month Menu
 * 		.dijitCalendarMonthMenu - menu container
 * 		.dijitCalendarMonthMenu .dijitCalendarMonthLabel - month label in menu item
 * 		.dijitCalendarMonthMenu .dijitCalendarMonthLabelHover - menu item hover state
 */

@require "variables.styl"
@require "HTMLElements.styl"

/* Styling of Calendar container */
.umc .dijitCalendar
	background-color: var(--bgc-popup)
	padding: 0.5em 0

	/* Styling for month container (previous/next month and month dropdown button) */
	.dijitCalendarMonthContainer
		padding-bottom: 8px

		/* Styling for month arrows */
		.dijitCalendarArrow
			height: 36px
			width: @height
			display: flex
			justify-content: center
			align-items: center
			cursor: pointer

			// icons
			.dijitCalendarIncrease
				icon-image(-72, -12, "", "-small", 12px, 12px)

			.dijitCalendarDecrease
				icon-image(-48, -12, "", "-small", 12px, 12px)

			&.dijitCalendarArrowHover
				opacity: 0.66

				.dijitCalendarIncrease
					icon-image(-84, -12, "", "-small", 12px, 12px)

				.dijitCalendarDecrease
					icon-image(-60, -12, "", "-small", 12px, 12px)

			&.dijitCalendarArrowActive
				opacity: 1

				.dijitCalendarIncrease
					icon-image(-84, -12, "", "-small", 12px, 12px)

				.dijitCalendarDecrease
					icon-image(-60, -12, "", "-small", 12px, 12px)

			.dijitA11ySideArrow
				/* text +/- labels instead of arrow icons, for high contrast mode */
				display: none

		/* Styling for month DropDownButton */
		.dijitDropDownButton
			margin: 0

			// arrow styling
			.dijitArrowButtonInner
				icon-image(0, -12, "", "-small", 12px, 12px)

			&.dijitDropDownButtonHover .dijitArrowButtonInner
				icon-image(-12, -12, "", "-small", 12px, 12px)
				opacity: 0.66

			&.dijitDropDownButtonActive .dijitArrowButtonInner
				icon-image(-12, -12, "", "-small", 12px, 12px)
				opacity: 1

	/* Styling for the date cells */
	table
		width: 100%

		/* day label style (monday - sunday) */
		.dijitCalendarDayLabelTemplate
			text-align: center
			border-bottom: 1px solid var(--font-color-contrast-low)
			padding: 0 0 2px

		/* date cells style - basic*/
		.dijitCalendarDateTemplate
			text-align: center
			border-radius: var(--border-radius-interactable)

			.dijitCalendarDateLabel
				display: block
				padding: 0.5em

		/* Dates of previous next months */
		.dijitCalendarPreviousMonth,
		.dijitCalendarNextMonth
			.dijitCalendarDateLabel
				color: var(--font-color-contrast-middle)

		/* Hovored date */
		.dijitCalendarHoveredDate
			background-color: var(--bgc-popup-item-hover)

		/* :focus date */
		.dijitCalendarDateTemplate:focus
			outline: none
			background-color: var(--bgc-popup-item-hover)

		/* Active date */
		.dijitCalendarActiveDate
			background-color: var(--bgc-popup-item-active)

		/* Selected date */
		.dijitCalendarSelectedDate
			background-color: var(--bgc-popup-item-selected)
			box-shadow: inset 0 0 0 1px var(--font-color-contrast-high)

		/* Disabled Calendar Style*/
		.dijitCalendarDisabledDate
			color: var(--font-color-contrast-low)

	/* Styling for year container */
	.dijitCalendarYearContainer
		padding-top: spacing(1)

		.dijitCalendarYearLabel
			display: flex

			.dijitCalendarNextYear,
			.dijitCalendarPreviousYear
				display: flex
				align-items: center
				justify-content: center
				width: 100%
				font-size: var(--font-size-4)
				color: var(--font-color-contrast-middle)

			.currentYearInput
				background-color: transparent
				border-color: var(--font-color-contrast-middle)

				.dijitInputInner
					text-align: center

/* Styling for month drop down list */
.umc .dijitCalendarMonthMenu
	text-align: center
	background-image: none

	.dijitCalendarMonthLabel
		padding: 2px 0

		&Hover
			background-color: var(--bgc-popup-item-hover)
		&Active
			background-color: var(--bgc-popup-item-active)

/* Styling for the hot keys tootip table */
.umc .calendarHotKeysTable th
	font-weight: bold
