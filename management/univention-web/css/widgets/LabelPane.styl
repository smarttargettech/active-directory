@require "../variables.styl"

/* labels for form elements */
.umcLabelPane
	display: inline-block
	vertical-align: bottom

	> .umcLabelPaneLabelNode
		--local-color-normal: var(--font-color-contrast-middle)
		--local-color: var(--local-color-normal)
		display: inline-flex
		align-items: center
		font-size: var(--font-size-4)
		color: var(--local-color)
		transition: color 250ms

		&Top
			margin-bottom: spacing(1, true)
		&Right
			margin-left: spacing(1)
		&Bottom
			margin-top: spacing(1, true)

	&Error > .umcLabelPaneLabelNode
		--local-color: var(--font-color-error)
	&Disabled
		> .umcLabelPaneLabelNode
			--local-color: var(--font-color-contrast-low)

// TODO what is this
.umcLabelPane .umcToolTip
	background-position: 0 -36px

	.umcToolTipHover
		background-position: -12px -36px
		opacity: 0.66

	.umcToolTipClicked
		background-position: -48px -36px

.umcDescriptionIcon
	flex: 0 0 auto
	height: 1em
	width: @height
	margin-left: spacing(1)
	transition: opacity 250ms
	cursor: pointer

// widget specific styles
.umcLabelPane-dijitCheckBox,
.umcLabelPane-dijitRadio
	display: inline-flex
	align-items: center

	.umcLabelPaneContainerNode
		display: flex

	.umcLabelPaneLabelNode label
		cursor: pointer
	&.umcLabelPaneDisabled
		.umcLabelPaneLabelNode label
			cursor: var(--cursor-disabled)

.umcLabelPane-dijitCheckBox--betweenNonCheckBoxes
	height: s('calc(%s + var(--inputfield-size))', $labelpane-padding-bottom)
// see inputsizes.styl
.umc .umcLayoutRow:last-child > .umcLabelPane-dijitCheckBox--betweenNonCheckBoxes
	height: var(--inputfield-size)
