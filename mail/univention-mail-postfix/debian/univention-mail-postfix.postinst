# shellcheck source=/dev/null
. /usr/share/univention-lib/all.sh

# create dummy main.cf to prevent error messages
[ -e /etc/postfix/main.cf ] || touch /etc/postfix/main.cf
# create empty local files for our customers
[ -e /etc/postfix/main.cf.local ] || touch /etc/postfix/main.cf.local
[ -e /etc/postfix/master.cf.local ] || touch /etc/postfix/master.cf.local

adduser --quiet --system --home /var/lib/listfilter --disabled-password listfilter
adduser --quiet --system --home /var/lib/systemmail --shell /bin/bash systemmail
newaliases
adduser postfix sasl

#DEBHELPER#

eval "$(univention-config-registry shell)"


univention-config-registry set \
	postfix/autostart?yes \
	mail/postfix/virtual/enabled?no \
	mail/postfix/transport/ldap/enabled?no \
	mail/postfix/inet/interfaces?127.0.0.1 \
	mail/postfix/ldap/timeout?15 \
	mail/postfix/policy/listfilter?no \
	mail/postfix/policy/listfilter/use_sasl_username?yes \
	'mail/postfix/masquerade/domains?$mydomain' \
	mail/postfix/masquerade/exceptions?root \
	mail/alias/root?systemmail@$hostname.$domainname \
	mail/alias/postmaster?root \
	mail/messagesizelimit?10240000 \
	mail/postfix/tls/client/exclude_ciphers?"RC4, aNULL" \
	mail/postfix/ldaptable/starttls?yes \
	mail/postfix/ldaptable/tlsrequirecert?yes \
	mail/postfix/ldaptable/tlscacertfile?"/etc/univention/ssl/ucsCA/CAcert.pem" \
	mail/postfix/ldaptable/debuglevel?0 \
	mail/postfix/smtpd/tls/dh1024/param/file?/etc/postfix/dh_2048.pem \
	mail/postfix/smtpd/tls/dh512/param/file?/etc/postfix/dh_512.pem \
	mail/postfix/smtpd/tls/eecdh/grade?strong \
	mail/postfix/smtpd/tls/exclude_ciphers?"RC4, aNULL" \
	mail/postfix/tls/preempt/cipherlist?yes \
	mail/postfix/smtpd/tls/loglevel?0 \
	mail/postfix/smtp/tls/loglevel?0 \
	mail/postfix/mastercf/options/smtps/smtpd_tls_wrappermode?yes \
	mail/postfix/mastercf/options/smtps/smtpd_sasl_auth_enable?yes \
	mail/postfix/mastercf/options/submission/smtpd_sasl_auth_enable?yes \
	mail/postfix/mastercf/options/submission/smtpd_enforce_tls?yes \
	mail/postfix/tls/client/policy/amavis?"[127.0.0.1]:10024 none"

postmap /etc/postfix/tls_policy

eval "$(univention-config-registry shell)"

# fresh installation
if [ "$1" = "configure" ] && [ -z "$2" ] ; then
	univention-config-registry set \
		mail/postfix/smtpd/restrictions/recipient/10="permit_mynetworks" \
		mail/postfix/smtpd/restrictions/recipient/30="permit_sasl_authenticated" \
		mail/postfix/smtpd/restrictions/recipient/50="reject_unauth_destination" \
		mail/postfix/smtpd/restrictions/recipient/70="reject_unlisted_recipient"

	# use precalculated DH parameters, the join script will schedule regeneration
	# for tomorrow
	# 512 bit parameters generated by UCS, 2048 bit parameters from RFC 3526
	cp /usr/share/univention-mail-postfix/dh_*.pem /etc/postfix
fi

# Upgrade to 5.2, defaults are set in config files
if [ "$1" = "configure" ] && [ -n "$2" ] && dpkg --compare-versions "$2" lt-nl 16.0.7; then
	# Check and unset TLS protocol variables if set to "!SSLv2,!SSLv3" from 5.0 installation
	# Don't unset if user modified them
		for var in mail/postfix/smtpd/tls/mandatory_protocols \
				mail/postfix/tls/client/mandatory_protocols \
				mail/postfix/tls/client/protocols; do
			if [ "$(univention-config-registry get $var)" = "!SSLv2,!SSLv3" ]; then
				univention-config-registry unset "$var"
			fi
	done
fi

# Bug 42249 - support virtual mail aliases
for file in transport virtual canonical access relocated; do
  if [ ! -e /etc/postfix/$file ]; then
      touch /etc/postfix/$file
  fi
  postmap /etc/postfix/$file
done


univention-config-registry commit /etc/mailname /etc/listfilter.secret

if [ -z "$postfix_autostart" ] || [ "$postfix_autostart" = "yes" ]; then
	deb-systemd-invoke restart postfix.service
fi

# restart to activate new listener module
deb-systemd-invoke restart univention-directory-listener.service

# reload cron
invoke-rc.d cron reload

exit 0
